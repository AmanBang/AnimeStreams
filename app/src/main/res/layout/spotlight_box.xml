<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/S_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="#212121">

            <TextView
                android:id="@+id/S_episodeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="#40394A"
                android:elevation="14dp"
                android:fontFamily="@font/regular"
                android:gravity="start"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_marginTop="6dp"
                android:textColorHighlight="#40394A"/>

            <TextView
                android:id="@+id/S_animename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="#40394A"
                android:elevation="1dp"
                android:fontFamily="@font/regular"
                android:gravity="start"
                android:text="My Hero Academia"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColorHighlight="#40394A"
                android:shadowColor="#000"/>

            <TextView
                android:id="@+id/S_animeDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTintMode="multiply"
                android:elevation="1dp"
                android:fontFamily="@font/regular"
                android:gravity="start"
                android:text="Second-year high school student Yatora Yaguchi is bored with his normal life. He studies well and"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginBottom="6dp"
                android:textColorHighlight="#40394A"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/S_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="-1"
            android:background="#000"
            android:outlineAmbientShadowColor="#000"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>